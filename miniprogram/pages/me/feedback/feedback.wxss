/* pages/me/feedback/feedback.wxss */

.feedback_input{
  background-color: white;
  border-width: 3rpx;
  border-color: gray;
  border-style: solid;
  margin-left: 5%;
  margin-right: 5%;
  margin-top: 30rpx;
  height: 300rpx;
}

.top_view{
  background-color: rgb(241,241,241);
  margin-top: 5%;
  margin-left: 4%;
  margin-right: 4%;
  border-radius: 10rpx;
  line-height: 60rpx;
  height: 190rpx;
}

.top_text{
  margin-top: 60rpx;
  font-size: 30rpx;
  margin-right: 30rpx;
  justify-content:center;
  align-content: center; 
  display:block;
  margin-left:25rpx;
}

.title_view{
  margin-top: 50rpx;
  margin-left: 5%;
  margin-right: 5%;
  margin-bottom: 50rpx;
  font-size: 35rpx;
  font-weight: 600;
}

.star_text{
  color: red;
}

.checkbox_view{
  margin-left: 5%;
  margin-right: 5%;
  flex-direction: column;
  display: block;
}

.content {
  width: 100%;
  background-color: #fff;
}
 
.supplement-report-pic{
  width: 90%;
  margin: 0rpx auto;
}
.report-pic-item{
  width: calc(33.33% - 10rpx);
  float: left;
  margin: 0rpx 0rpx 5rpx 0rpx;
  position: relative;
}
.report-pic-item:nth-child(2),.report-pic-item:nth-child(5),.report-pic-item:nth-child(8){
  margin: 0rpx 15rpx 5rpx 15rpx;
}
.report-pic-item>image{
  width: 100%;
  height: 200rpx;
}
.pic-item-close{
  position: absolute;
  right: 5rpx;
  top: 5rpx;
}
.pic-item-close image{
  width: 46rpx;
  height: 46rpx;
}
.supplement-report-operat{
  width: 90%;
  margin: 0rpx auto;
}
.supplement-report-operat button{
  border-radius: 50rpx;
  font-size: 32rpx;
  margin: 0rpx 0rpx 15rpx 0rpx;
}
.supplement-report-operat view{
  font-size: 28rpx;
  color: rgba(185, 186, 187, 1);
}