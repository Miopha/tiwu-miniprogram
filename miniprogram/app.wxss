/**app.wxss**/
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

.funcbt{
  border-radius: 80rpx;
  box-shadow: 5rpx 5rpx 5rpx 5rpx gray;
}

page {
  background-color:--color--;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}